{
  "name": "hospital-management-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --project=zhms.client",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:z_hms": "node dist/z_hms/server/server.mjs",
    "build:application": "ng build --project=@application/base && ng build --project=@application/commands && ng build --project=@application/queries ",
    "build:core": "ng build --project=@core/base && ng build --project=@core/models && ng build --project=@core/domain",
    "build:infrastructure": "ng build --project=@infrastructure/base && ng build --project=@infrastructure/authorization && ng build --project=@infrastructure/repositories",
    "build:view": "ng build --project=@view/base && ng build --project=@view/directives && ng build --project=@view/pipes && ng build --project=@view/utils",
    "build:all": "npm run build:core && npm run build:infrastructure && npm run build:application && npm run build:view && npm run build",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.1.0",
    "@angular/cdk": "^18.1.2",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/forms": "^18.1.0",
    "@angular/material": "^18.1.2",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@angular/service-worker": "^18.1.0",
    "@mdi/font": "^7.4.47",
    "@microsoft/signalr": "^8.0.7",
    "@ngx-translate/core": "^15.0.0",
    "@ngx-translate/http-loader": "^8.0.0",
    "bootstrap": "^5.3.2",
    "lodash-es": "^4.17.21",
    "lottie-web": "^5.12.2",
    "moment": "^2.30.1",
    "ngx-scrollbar": "^16.1.1",
    "ngxtension": "^4.0.0",
    "run-script-os": "*",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^10.0.0",
    "zod": "^3.24.2",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.2",
    "@angular/cli": "^18.1.1",
    "@angular/compiler-cli": "^18.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^10.0.0",
    "angular-eslint": "19.3.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.1.0",
    "typescript": "~5.5.2"
  }
}
